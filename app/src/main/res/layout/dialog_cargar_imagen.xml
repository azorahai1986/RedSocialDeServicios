<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imagen_trabajos"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/imTrabajo"
        android:layout_width="377dp"
        android:layout_height="318dp"
        android:layout_margin="20dp"
        android:src="@drawable/gente_trabajando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitulo" />

    <TextView
        android:id="@+id/text_cargar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cargar actividad"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btCargarActividad"
        app:layout_constraintTop_toBottomOf="@id/imTrabajo"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btCargarActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/browser_actions_divider_color"
        android:outlineSpotShadowColor="@color/cardview_dark_background"
        android:backgroundTint="@color/purple_200"
        android:src="@drawable/icon_camera"
        app:fabSize="normal"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imTrabajo"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>